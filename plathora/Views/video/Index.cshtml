@model IEnumerable<VideoIndexViewModel>;
@{
    ViewBag.Title = "Video Details";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Video List</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create"> Add New Video</a>

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Module </th>
                                    <th>Type</th>
                                    <th>Video Name</th>
                                    <th>Video Link</th>
                                    <th>Description</th>
                                    <th class="text-warning">Actions</th>
                                    @*id, fkmoduleid, type, videoName, videoLink, description, isdeleted, isactive*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>
                                        @item.modulename
                                    </td>
                                    <td>
                                        @item.type
                                    </td>
                                    <td>
                                        @item.videoName
                                    </td>
                                    <td>
                                        @item.videoLink
                                    </td>
                                    <td>
                                        @item.description
                                    </td>
                                    <td>
                                        <a class="text-success" asp-action="Edit" asp-route-id="@item.id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>

                                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.id">
                                            <i class="far fa-trash-alt"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table><br />




                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
